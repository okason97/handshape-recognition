#!/usr/bin/env bash

. bin/scripts/flags/declares.sh

variables["-t"]="tag"
variables["-n"]="name"
variables["--sudo"]="sudo"
variables["--use-official"]="use_official"

. bin/scripts/flags/arguments.sh

tag=${tag:-"cpu"}
name=${name:-"sign-language-recognition"}

echo "Creating $name container with tag $tag"
echo $PWD

u_flag=""
dockerfile=tf-py3-jupyter

[[ -v sudo ]] && u_flag="-u $(id -u):$(id -g)"

[[ -v use_official ]] && dockerfile=tf-official-py3-jupyter

docker build --build-arg DOCKER_ENV=$tag --rm -f dockerfiles/tf-py3-jupyter.Dockerfile -t $name:$tag . && \
docker run -v $PWD:/develop -v $PWD/results:/tf/results --rm $u_flag -p 6006:6006 -p 8888:8888 $name:$tag
