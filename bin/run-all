#!/usr/bin/env bash

. ./scripts/flags/declares.sh

variables["--mode"]="mode"
variables["--config"]="config"

. ./scripts/flags/arguments.sh

mode=${mode:-"train"}
config=${config:-"lsa16"}

echo "Running $mode mode with $config configuration file"

python src/proto-net/scripts/$mode/run_$mode.py --config src/proto-net/config/config_$config.conf